{
    "compilerOptions": {
      "target": "ES2017",
      "module": "ESNext",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "composite": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
  }
  