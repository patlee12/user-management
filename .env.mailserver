# Basic mail server configuration
MAIL_DOMAIN=user-management.net  # Replace with your domain
MAIL_RELAY_HOST=                   # Optional: If you are using a relay for outgoing mail
MAIL_RELAY_PORT=                   # Optional: The port for the relay
MAIL_RELAY_USER=                   # Optional: The username for authentication with the relay
MAIL_RELAY_PASSWORD=               # Optional: The password for authentication with the relay

# Enable or disable certain services
ENABLE_SPAMASSASSIN=1              # Enable SpamAssassin for spam filtering
ENABLE_CLAMAV=1                    # Enable ClamAV for virus scanning
ENABLE_POSTFIX=1                   # Enable Postfix for SMTP
ENABLE_DOVECOT=1                   # Enable Dovecot for IMAP
ENABLE_RSPAMD=1                    # Enable Rspamd for additional spam filtering
ENABLE_SIEVE=1                     # Enable Sieve filtering
ENABLE_SSL=1                       # Enable SSL encryption
ENABLE_TLS=1                       # Enable TLS encryption for SMTP and IMAP

# Mail account configuration
MAIL_ADMIN_USER=admin              # Admin user for the mail server
MAIL_ADMIN_PASSWORD=admin_password # Password for the admin user
MAIL_USER_DEFAULT_PASSWORD=password123 # Default password for new mail users (can be overridden)

# Optional: Quota and limits (in MB)
MAIL_QUOTA=100                     # Set a default quota in MB for user mailboxes
MAIL_MAX_MESSAGE_SIZE=25           # Max message size in MB
MAIL_MAX_MESSAGE_BODY_SIZE=10      # Max message body size in MB

# IMAP/SMTP Ports
POSTFIX_SMTP_PORT=25               # Postfix SMTP port
DOVECOT_IMAP_PORT=143              # Dovecot IMAP port
DOVECOT_IMAPS_PORT=993             # Dovecot IMAPS port (encrypted)

# DKIM (optional but recommended for sending mail)
ENABLE_DKIM=1                      # Enable DKIM signing for outgoing emails
DKIM_SELECTOR=default               # DKIM selector name
DKIM_PRIVATE_KEY_PATH=/etc/mailserver/dkim.private.key # Path to DKIM private key
DKIM_PUBLIC_KEY_PATH=/etc/mailserver/dkim.public.key   # Path to DKIM public key

# SSL Certificates
SSL_CERT_PATH=/etc/nginx/certs/nginx-selfsigned.crt  # Path to SSL certificate
SSL_KEY_PATH=/etc/nginx/certs/nginx-selfsigned.key   # Path to SSL private key

# Postfix settings for outgoing emails (adjust based on your setup)
POSTFIX_MYNETWORKS=127.0.0.0/8, [::1]/128
POSTFIX_RELAYHOST=                  # Optional: Set if you are using a relay server for outgoing mail
POSTFIX_RELAYPORT=25                # Optional: Set port for your relay server

# Logging (optional)
ENABLE_LOGGING=1                    # Enable logging for Postfix, Dovecot, etc.
LOG_LEVEL=3                         # Set log level (1: Errors only, 3: Full logs)

# Timezone (optional)
TZ=UTC                               # Set the timezone for the mail server

# Enable or disable certain mail services
ENABLE_MANAGED_SECURITY=1           # Enable managed security configurations (use defaults)
ENABLE_TLS_ECDHE=1                  # Enable ECDHE for better security
ENABLE_SMTP_AUTH=1                  # Enable SMTP Authentication

# Miscellaneous settings
ENABLE_FAIL2BAN=1                   # Enable Fail2Ban to protect the server from brute-force attacks
FAIL2BAN_IPTABLES_ENABLED=1         # Enable iptables rules for Fail2Ban
