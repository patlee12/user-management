{
  "extends": "./tsconfig.json", // Extend the backend's tsconfig.json
  "compilerOptions": {
    "rootDir": "./", // Backend build root
    "baseUrl": "./", // Backend base directory
    "outDir": "./dist", // Build output directory
    "incremental": true // Enable incremental builds
  },
  "include": ["src/**/*", "prisma/**/*", "prisma/seed.ts"],
  "exclude": ["node_modules", "test", "**/*spec.ts"]
}
